{
	"name": "PHP",
	"image": "mcr.microsoft.com/devcontainers/php:1-8.2-bullseye",
	// "customizations": {},
	"forwardPorts": [
		8000
	],
	"features": {
		"ghcr.io/shyim/devcontainers-features/symfony-cli:0": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
